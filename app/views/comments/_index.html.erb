<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <div class="comment_<%= comment.id %>">
        <li>
          <p class="left"><%= comment.user.name %>さんがコメントしました。</p>
          <p class="left comment_field"><%= comment.content %></p>
          <% if current_user.id == comment.user.id %>
            <p class="right">
              <%= link_to '', edit_blog_comment_path(blog, comment), class: "fa fa-pencil-square-o fa-lg", method: :get, remote: true %>
              <%= link_to '', blog_comment_path(blog, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
            </p>
          <% end %>
        </li>
      </div>
    <% end %>
  <% end %>
</ul>
