<div class="container">
 <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
  <h1>写真一覧</h1>

   <%= link_to "写真を投稿する", blogs_path, class:'btn btn-default btn-sm btn-info'%>

   <% @blog.each do |blog| %>
    <div class="row">
    <%= link_to blog_path(blog) do %>
     <h4><strong><%= blog.title %></strong></h4>
    <% end %>
    <p>ぼやき:<%= blog.content %></p>
    <%= link_to "ぼやきを編集する", edit_blog_path(blog.id), class:'btn btn-default btn-sm btn-success'%>
    <%= link_to 'ぼやきを削除する', blog_path(blog.id), method: :delete, data: { confirm: '消すで？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
   <% end %>
 </div>
</div>
